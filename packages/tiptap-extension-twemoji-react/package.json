{
  "name": "@raihancodes/tiptap-extension-twemoji-react",
  "version": "0.0.19",
  "type": "module",
  "description": "Notion-style Tiptap emoji extension for React â€” supports Twemoji, emoticons, shortcodes, and cross-platform consistency with modern editor UX.",
  "scripts": {
    "build": "concurrently \"rollup -c --environment BUILD:prod\" \"rollup -c rollup.dts.config.js\" \"tsc --noEmit\"",
    "dev": "concurrently -k \"rollup -c --watch --environment BUILD:dev\" \"rollup -c rollup.dts.config.js --watch\" \"tsc --noEmit --watch\"",
    "report": "concurrently \"rollup -c --environment BUILD:report\" \"rollup -c rollup.dts.config.js\" \"tsc --noEmit\"",
    "typecheck": "tsc --noEmit"
  },
  "author": "Raihan Ramadhan <raihanramadhan.rn22@gmail.com> (https://github.com/raihan-ramadhan/)",
  "contributors": [
    "Raihan Ramadhan <raihanramadhan.rn22@gmail.com> (https://github.com/raihan-ramadhan/)"
  ],
  "homepage": "https://tiptap-extension-twemoji.vercel.app",
  "repository": {
    "type": "git",
    "url": "https://github.com/raihan-ramadhan/tiptap-extension-twemoji.git"
  },
  "funding": [
    {
      "type": "individual",
      "url": "https://github.com/sponsors/raihan-ramadhan"
    },
    {
      "type": "individual",
      "url": "https://ko-fi.com/raihancodes"
    }
  ],
  "license": "MIT",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./popover": {
      "types": "./dist/popover.d.ts",
      "import": "./dist/popover.js",
      "require": "./dist/popover.cjs"
    }
  },
  "files": [
    "dist",
